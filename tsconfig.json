{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ES2021", "DOM.Iterable"],
		"module": "ESNext",
		"jsx": "preserve",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"useDefineForClassFields": true,
		"noEmit": true,
		"esModuleInterop": true,
		"incremental": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},

	"include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
	"exclude": ["node_modules", "src-tauri"]
}
